<div class="min-h-screen bg-lavender p-4">
  <header class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Add Subject</h1>
    <p class="text-gray-600">for <%= @student.name %></p>
  </header>

  <div class="bg-white rounded-xl p-6 shadow-sm">
    <%= render "form", subject: @subject,
        url: student_subjects_path(@student, teachable_id: @subject.teachable_id),
        cancel_path: student_subjects_path(@student) %>
  </div>
</div>
