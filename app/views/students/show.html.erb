<div class="min-h-screen bg-lavender p-4 pb-20 md:pb-4">
  <div class="max-w-2xl mx-auto space-y-6">
    <%# Header with back link %>
    <header class="flex items-center gap-3">
      <%= link_to students_path, class: "text-gray-500 hover:text-gray-700", aria: { label: "Back to students" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-800">Student Profile</h1>
    </header>

    <%# Profile card %>
    <div class="bg-white rounded-2xl p-6 shadow-sm">
      <div class="flex items-center gap-4">
        <%= student_avatar(@student, size: :large) %>
        <div>
          <h2 class="text-xl font-bold text-gray-800"><%= @student.name %></h2>
          <% if @student.year_level %>
            <p class="text-gray-500">Year <%= @student.year_level %></p>
          <% end %>
        </div>
        <div class="ml-auto">
          <%= link_to edit_student_path(@student), class: "text-coral hover:text-coral/80", aria: { label: "Edit student" } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931z"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <%# Weekly progress %>
    <div class="bg-white rounded-2xl p-5 shadow-sm">
      <h3 class="text-sm font-semibold text-gray-500 tracking-wide uppercase mb-3">This Week</h3>
      <% pct = completion_percentage(@completion_stats) %>
      <div class="flex items-center gap-4">
        <div class="flex-1">
          <div class="w-full bg-gray-100 rounded-full h-3">
            <div class="bg-coral rounded-full h-3 transition-all" style="width: <%= pct %>%"></div>
          </div>
        </div>
        <span class="text-sm font-medium text-gray-600 whitespace-nowrap">
          <%= @completion_stats[:completed] %>/<%= @completion_stats[:total] %> done
        </span>
      </div>
    </div>

    <%# Quick actions %>
    <div class="grid grid-cols-2 gap-3">
      <%= link_to student_subjects_path(@student),
          class: "bg-white rounded-2xl p-4 shadow-sm flex items-center gap-3 hover:shadow-md transition-shadow" do %>
        <div class="w-10 h-10 bg-coral/10 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-coral" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.331 0 4.472.89 6.074 2.356.14.131.386.131.527 0A8.967 8.967 0 0118 18c1.052 0 2.062.18 3 .512V4.262A8.959 8.959 0 0018 3.75a8.967 8.967 0 00-6 2.292z"/>
          </svg>
        </div>
        <div>
          <p class="font-medium text-gray-800">Subjects</p>
          <p class="text-sm text-gray-500"><%= @subjects.size %> total</p>
        </div>
      <% end %>

      <%= link_to student_documents_path(@student),
          class: "bg-white rounded-2xl p-4 shadow-sm flex items-center gap-3 hover:shadow-md transition-shadow" do %>
        <div class="w-10 h-10 bg-coral/10 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-coral" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
          </svg>
        </div>
        <div>
          <p class="font-medium text-gray-800">Documents</p>
          <p class="text-sm text-gray-500"><%= @recent_documents.size %> recent</p>
        </div>
      <% end %>
    </div>

    <%# Subjects list %>
    <div class="bg-white rounded-2xl p-5 shadow-sm">
      <h3 class="text-sm font-semibold text-gray-500 tracking-wide uppercase mb-3">Subjects</h3>
      <% if @subjects.any? %>
        <div class="space-y-2">
          <% @subjects.each do |subject| %>
            <div class="flex items-center justify-between py-2 border-b border-gray-50 last:border-0">
              <span class="text-gray-800"><%= subject.name %></span>
              <span class="text-xs px-2 py-1 rounded-full <%= subject_type_badge_class(subject.subject_type) %>"><%= subject.subject_type.humanize %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-400 text-sm">No subjects yet.</p>
      <% end %>
    </div>

    <% if @student.student_groups.any? %>
      <%= render "shared/groups_banner" %>
    <% end %>

    <%# Recent notes %>
    <% if @recent_documents.any? || @recent_quick_notes.any? %>
      <div class="bg-white rounded-2xl p-5 shadow-sm">
        <h3 class="text-sm font-semibold text-gray-500 tracking-wide uppercase mb-3">Recent Notes</h3>
        <div class="space-y-3">
          <% @recent_documents.first(3).each do |narration| %>
            <div class="border-b border-gray-50 pb-3 last:border-0 last:pb-0">
              <p class="text-xs text-coral font-medium"><%= narration.subject.name %></p>
              <p class="text-sm text-gray-700 line-clamp-2"><%= narration.content %></p>
              <p class="text-xs text-gray-400 mt-1"><%= time_ago_in_words(narration.created_at) %> ago</p>
            </div>
          <% end %>
          <% @recent_quick_notes.first(3).each do |note| %>
            <div class="border-b border-gray-50 pb-3 last:border-0 last:pb-0">
              <p class="text-xs text-gray-500 font-medium">Quick Note</p>
              <p class="text-sm text-gray-700 line-clamp-2"><%= note.content %></p>
              <p class="text-xs text-gray-400 mt-1"><%= time_ago_in_words(note.created_at) %> ago</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
