<div class="min-h-screen bg-lavender p-4">
  <header class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-800">Students</h1>
    <%= link_to "Add Student", new_student_path,
        class: "bg-coral text-white px-4 py-2 rounded-lg font-medium hover:bg-coral/90" %>
  </header>

  <% if @students.any? %>
    <div class="space-y-3">
      <% @students.each do |student| %>
        <div class="bg-white rounded-xl p-4 flex items-center justify-between shadow-sm">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-coral/20 rounded-full flex items-center justify-center text-coral font-bold">
              <%= student.name.first.upcase %>
            </div>
            <div>
              <p class="font-medium text-gray-800"><%= student.name %></p>
              <% if student.year_level %>
                <p class="text-sm text-gray-500">Year <%= student.year_level %></p>
              <% end %>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <%= link_to "Edit", edit_student_path(student),
                class: "text-gray-600 hover:text-gray-800 px-3 py-1" %>
            <%= button_to "Delete", student_path(student),
                method: :delete,
                class: "text-red-600 hover:text-red-800 px-3 py-1",
                data: { turbo_confirm: "Are you sure you want to delete #{student.name}?" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl p-6 text-center text-gray-500">
      No students yet. Add your first student to get started.
    </div>
  <% end %>
</div>
