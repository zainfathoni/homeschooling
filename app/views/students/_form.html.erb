<%= form_with model: student, class: "space-y-4" do |form| %>
  <% if student.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-red-600 mt-2">
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for :teachable do |teachable_form| %>
    <div>
      <%= teachable_form.label :name, class: "block text-gray-700 font-medium mb-1" %>
      <%= teachable_form.text_field :name,
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral",
          placeholder: "Enter student name" %>
    </div>
  <% end %>

  <div>
    <%= form.label :avatar, "Profile Photo", class: "block text-gray-700 font-medium mb-1" %>
    <div class="flex items-center gap-4">
      <% if student.avatar.attached? %>
        <%= image_tag student.avatar.variant(:thumb), class: "w-16 h-16 rounded-full object-cover", alt: student.name.presence || "Profile photo" %>
      <% elsif student.safe_avatar_url.present? %>
        <img src="<%= student.safe_avatar_url %>" class="w-16 h-16 rounded-full object-cover" alt="<%= student.name.presence || "Profile photo" %>" />
      <% else %>
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center text-gray-400" aria-hidden="true">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
          </svg>
        </div>
      <% end %>
      <div class="flex-1">
        <%= form.file_field :avatar,
            accept: "image/jpeg,image/png,image/gif,image/webp",
            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-coral/10 file:text-coral hover:file:bg-coral/20 cursor-pointer",
            direct_upload: true %>
        <p class="mt-1 text-xs text-gray-400">JPEG, PNG, GIF, or WebP. Max 5MB.</p>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :year_level, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.number_field :year_level,
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral",
        placeholder: "e.g., 6",
        min: 1,
        max: 12 %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-coral text-white px-6 py-2 rounded-lg font-medium hover:bg-coral/90 cursor-pointer" %>
    <%= link_to "Cancel", students_path, class: "text-gray-600 hover:text-gray-800 px-4 py-2" %>
  </div>
<% end %>
