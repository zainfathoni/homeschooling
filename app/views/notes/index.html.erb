<div class="min-h-screen bg-lavender pb-20 md:pb-6">
  <div class="max-w-2xl mx-auto px-4 py-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Notes</h1>
      <span class="text-sm text-gray-500"><%= @student.name %></span>
    </div>

    <div class="flex gap-2 mb-6">
      <%= link_to "All",
          notes_path,
          class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{@filter.nil? ? 'bg-coral text-white' : 'bg-white text-gray-600 hover:bg-gray-100'}" %>
      <%= link_to "Narrations",
          notes_path(filter: "narrations"),
          class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{@filter == 'narrations' ? 'bg-coral text-white' : 'bg-white text-gray-600 hover:bg-gray-100'}" %>
      <%= link_to "Quick Notes",
          notes_path(filter: "quick_notes"),
          class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{@filter == 'quick_notes' ? 'bg-coral text-white' : 'bg-white text-gray-600 hover:bg-gray-100'}" %>
    </div>

    <% if @recordings.any? %>
      <div class="space-y-4">
        <% @recordings.each do |recording| %>
          <%= render partial: "recordings/#{recording.recordable_type.underscore}",
                     locals: { recording: recording, recordable: recording.recordable } %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-xl p-8 text-center">
        <p class="text-gray-500">
          <% if @filter == "narrations" %>
            No narrations yet. Add one from the daily view!
          <% elsif @filter == "quick_notes" %>
            No quick notes yet. Tap the + button to add one!
          <% else %>
            No notes yet. Start capturing learning moments!
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
