<div class="min-h-screen bg-lavender p-4">
  <header class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Edit Subject</h1>
    <p class="text-gray-600">for <%= @student_group.name %></p>
  </header>

  <div class="bg-white rounded-xl p-6 shadow-sm">
    <%= render "subjects/form", subject: @subject,
        url: student_group_subject_path(@student_group, @subject),
        cancel_path: student_group_path(@student_group) %>
  </div>
</div>
