<%# locals: (student:, date:, quick_note_recordings:) %>
<div class="hidden md:block bg-white rounded-2xl p-5 shadow-sm mt-4">
  <h3 class="text-sm font-semibold text-gray-500 tracking-wide uppercase mb-4">Quick Notes</h3>

  <%= render "quick_notes/inline_form", student: student, date: date %>

  <% if quick_note_recordings.any? %>
    <div id="quick_notes" class="mt-4 space-y-3">
      <% quick_note_recordings.each do |recording| %>
        <%= render "daily/quick_note_card", recording: recording, quick_note: recording.recordable %>
      <% end %>
    </div>
  <% else %>
    <div id="quick_notes" class="mt-4">
      <p class="text-sm text-gray-400 text-center py-2">No notes for this day</p>
    </div>
  <% end %>
</div>
