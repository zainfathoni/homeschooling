<%# locals: (recording:, quick_note:) %>
<%= turbo_frame_tag dom_id(quick_note) do %>
  <div class="bg-gray-50 rounded-lg p-3">
    <div class="flex items-start justify-between gap-2">
      <% if quick_note.content.present? %>
        <p class="text-sm text-gray-700 whitespace-pre-wrap flex-1"><%= quick_note.content %></p>
      <% else %>
        <p class="text-sm text-gray-400 italic flex-1">Voice note</p>
      <% end %>
      <span class="text-sm flex-shrink-0"><%= quick_note.audio.attached? ? "ðŸŽ™ï¸" : "ðŸ“" %></span>
    </div>

    <% if quick_note.audio.attached? %>
      <div class="mt-2">
        <audio controls class="w-full h-8" src="<%= url_for(quick_note.audio) %>" aria-label="Voice quick note">
          Your browser does not support audio playback.
        </audio>
      </div>
    <% end %>

    <div class="flex items-center gap-3 mt-2 pt-2 border-t border-gray-200">
      <%= link_to "Edit", edit_student_quick_note_path(recording.student, recording),
          class: "text-xs text-gray-500 hover:text-coral",
          data: { turbo_frame: "_top" } %>
      <%= link_to "Delete", student_quick_note_path(recording.student, recording),
          class: "text-xs text-gray-500 hover:text-red-500",
          data: { turbo_method: :delete, turbo_confirm: "Delete this note?" } %>
    </div>
  </div>
<% end %>
