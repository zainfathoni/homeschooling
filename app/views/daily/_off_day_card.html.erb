<%# locals: (subject:) %>
<div class="relative w-full bg-lavender/30 rounded-lg overflow-hidden opacity-60 flex items-center gap-4 p-4 pl-5">
  <%# Left accent tab - positioned absolutely to avoid wavy border effect %>
  <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-gray-300"></div>

  <div class="w-11 h-11 rounded-lg border-2 border-gray-200 flex items-center justify-center shrink-0">
    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
    </svg>
  </div>

  <div class="flex-1 min-w-0">
    <span class="text-base font-medium text-gray-400 block">
      <%= subject.name %>
    </span>
    <span class="text-xs text-gray-400">Not today</span>
  </div>
</div>
