<%# Mobile bottom navigation - hidden on tablet+ (md:hidden) %>
<nav class="fixed bottom-0 inset-x-0 bg-white border-t border-gray-200 md:hidden z-50 overflow-x-auto" role="navigation" aria-label="Main navigation">
  <div class="flex justify-around min-w-max px-2">
    <%= link_to today_path, class: nav_link_classes(today_path, base_classes: "flex flex-col items-center py-3 px-2 min-w-[48px] min-h-[44px]"), "aria-label": "Today" do %>
      <%= render "icons/today", css_class: "w-6 h-6" %>
      <span class="text-[10px] mt-0.5">Today</span>
    <% end %>

    <%= link_to week_path, class: nav_link_classes(week_path, base_classes: "flex flex-col items-center py-3 px-2 min-w-[48px] min-h-[44px]"), "aria-label": "Week" do %>
      <%= render "icons/week", css_class: "w-6 h-6" %>
      <span class="text-[10px] mt-0.5">Week</span>
    <% end %>

    <%= link_to notes_path, class: nav_link_classes(notes_path, base_classes: "flex flex-col items-center py-3 px-2 min-w-[48px] min-h-[44px]"), "aria-label": "Notes" do %>
      <%= render "icons/notes", css_class: "w-6 h-6" %>
      <span class="text-[10px] mt-0.5">Notes</span>
    <% end %>

    <%= link_to students_path, class: nav_link_classes(students_path, base_classes: "flex flex-col items-center py-3 px-2 min-w-[48px] min-h-[44px]"), "aria-label": "Students" do %>
