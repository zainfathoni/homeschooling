<%# locals: (narration:, student:, subjects:) %>
<%= form_with model: [student, narration], class: "space-y-6" do |form| %>
  <% if narration.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-red-600 mt-2">
        <% narration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :subject_id, "Subject", class: "block text-gray-700 font-medium mb-1" %>
    <%= form.select :subject_id,
        options_from_collection_for_select(subjects, :id, :name, narration.subject_id),
        { prompt: "Select a subject" },
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <div>
    <%= form.label :date, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.date_field :date,
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <%= form.hidden_field :narration_type, value: "text" %>

  <div>
    <%= form.label :content, "What did you learn?", class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_area :content, rows: 6,
        placeholder: "Describe what you learned today...",
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-coral text-white px-6 py-2 rounded-lg font-medium hover:bg-coral/90 cursor-pointer" %>
    <%= link_to "Cancel", student_narrations_path(student), class: "text-gray-600 hover:text-gray-800 px-4 py-2" %>
  </div>
<% end %>
