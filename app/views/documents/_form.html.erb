<%# locals: (document:, student:, subjects:, date:) %>
<%= form_with model: [student, document], class: "space-y-6",
    data: { controller: "document-type", document_type_type_value: document.document_type || "text" } do |form| %>
  <% if document.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-red-600 mt-2">
        <% document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :subject_id, "Subject", class: "block text-gray-700 font-medium mb-1" %>
    <%= form.select :subject_id,
        options_from_collection_for_select(subjects, :id, :name, document.subject_id),
        { prompt: "Select a subject" },
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <div>
    <%= form.label :date, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.date_field :date,
        value: date,
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <div>
    <span class="block text-gray-700 font-medium mb-2">Type</span>
    <div class="flex gap-2">
      <button type="button"
          data-document-type-target="typeButton"
          data-type="text"
          data-action="document-type#select"
          class="flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors">
        <span>ğŸ“</span> Text
      </button>
      <button type="button"
          data-document-type-target="typeButton"
          data-type="voice"
          data-action="document-type#select"
          class="flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors">
        <span>ğŸ™ï¸</span> Voice
      </button>
      <button type="button"
          data-document-type-target="typeButton"
          data-type="photo"
          data-action="document-type#select"
          class="flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors">
        <span>ğŸ“·</span> Photo
      </button>
      <button type="button"
          data-document-type-target="typeButton"
          data-type="video"
          data-action="document-type#select"
          class="flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-colors">
        <span>ğŸ¬</span> Video
      </button>
    </div>
    <%= form.hidden_field :document_type, data: { document_type_target: "typeField" } %>
  </div>

  <div data-document-type-target="textInput">
    <%= form.label :content, "What did you learn?", class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_area :content, rows: 6,
        placeholder: "Describe what you learned today...",
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral" %>
  </div>

  <div data-document-type-target="voiceInput" class="hidden">
    <%= form.label :media, "Record your voice", class: "block text-gray-700 font-medium mb-1" %>
    <p class="text-gray-500 text-sm mb-2">Tap to record or upload an audio file</p>
    <%= form.file_field :media,
        accept: "audio/*",
        capture: "microphone",
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-coral file:text-white file:cursor-pointer" %>
    <% if document.persisted? && document.voice? && document.media.attached? %>
      <div class="mt-3 p-3 bg-gray-50 rounded-lg">
        <p class="text-sm text-gray-600 mb-2">Current recording:</p>
        <audio controls class="w-full" src="<%= url_for(document.media) %>">
          Your browser does not support audio playback.
        </audio>
      </div>
    <% end %>
  </div>

  <div data-document-type-target="photoInput" class="hidden">
    <%= form.label :media, "Take or upload a photo", class: "block text-gray-700 font-medium mb-1" %>
    <p class="text-gray-500 text-sm mb-2">Tap to take a photo or choose from gallery</p>
    <%= form.file_field :media,
        accept: "image/*",
        capture: "environment",
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-coral file:text-white file:cursor-pointer" %>
    <% if document.persisted? && document.photo? && document.media.attached? %>
      <div class="mt-3">
        <p class="text-sm text-gray-600 mb-2">Current photo:</p>
        <%= image_tag document.media, class: "max-w-xs rounded-lg" %>
      </div>
    <% end %>
  </div>

  <div data-document-type-target="videoInput" class="hidden">
    <%= form.label :media, "Record or upload a video", class: "block text-gray-700 font-medium mb-1" %>
    <p class="text-gray-500 text-sm mb-2">Tap to record or choose from gallery</p>
    <%= form.file_field :media,
        accept: "video/mp4,video/quicktime,video/webm,video/*",
        capture: "environment",
        class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-coral focus:border-coral file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-coral file:text-white file:cursor-pointer" %>
    <% if document.persisted? && document.video? && document.media.attached? %>
      <div class="mt-3">
        <p class="text-sm text-gray-600 mb-2">Current video:</p>
        <video controls class="w-full rounded-lg max-w-md" src="<%= url_for(document.media) %>">
          Your browser does not support video playback.
        </video>
      </div>
    <% end %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-coral text-white px-6 py-2 rounded-lg font-medium hover:bg-coral/90 cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed",
        data: { turbo_submits_with: "Creating..." } %>
    <%= link_to "Cancel", student_documents_path(student), class: "text-gray-600 hover:text-gray-800 px-4 py-2" %>
  </div>
<% end %>
