<div class="min-h-screen bg-lavender p-4">
  <header class="mb-6 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Documents</h1>
      <p class="text-gray-600"><%= @student.name %></p>
    </div>
    <%= link_to "Add Document", new_student_document_path(@student),
        class: "bg-coral text-white px-4 py-2 rounded-lg font-medium hover:bg-coral/90" %>
  </header>

  <%= render "filters", student: @student %>

  <%= turbo_frame_tag "documents" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      <% if @documents.any? %>
        <%= render partial: "document", collection: @documents %>
      <% else %>
        <div class="md:col-span-2 bg-white rounded-xl p-6 text-center text-gray-500">
          No documents yet. Add your first document to capture learning evidence.
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "â† Back to Students", students_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
</div>
