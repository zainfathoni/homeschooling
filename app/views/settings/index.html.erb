<h1 class="text-2xl font-bold text-gray-900 mb-6">Settings</h1>

<div class="bg-white rounded-xl p-6 shadow-sm space-y-6">
  <%# Navigation section for features not in bottom nav %>
  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Navigation</h2>
    <div class="space-y-3">
      <%= link_to student_groups_path, class: "flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors" do %>
        <%= render "icons/groups", css_class: "w-6 h-6 text-gray-600" %>
        <div>
          <div class="font-medium text-gray-900">Groups</div>
          <div class="text-sm text-gray-500">Manage student groups</div>
        </div>
      <% end %>

      <%= link_to report_path, class: "flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors" do %>
        <%= render "icons/reports", css_class: "w-6 h-6 text-gray-600" %>
        <div>
          <div class="font-medium text-gray-900">Reports</div>
          <div class="text-sm text-gray-500">View progress reports</div>
        </div>
      <% end %>
    </div>
  </div>

  <hr class="border-gray-200">

  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">App Settings</h2>
    <p class="text-gray-600">More settings coming soon</p>
  </div>
</div>
