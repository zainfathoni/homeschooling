<div class="min-h-screen bg-lavender p-4">
  <header class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Today</h1>
    <p class="text-gray-600"><%= @date.strftime("%A, %B %d") %></p>
  </header>

  <%= render "shared/student_selector" %>

  <% if @student %>
    <%= render "today/progress_bar", completed: @total_completed, total: @total_possible %>
  <% end %>

  <% if @subjects.any? %>
    <div class="space-y-3">
      <% @subjects.each do |subject| %>
        <%= render "subjects/checkbox", subject: subject, date: @date %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl p-6 text-center text-gray-500">
      No subjects yet. Add a student and subjects to get started.
    </div>
  <% end %>
</div>
