{
  "name": "homeschool-planner",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run db:setup && react-router dev",
    "dev:skip-db": "react-router dev",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test:e2e": "playwright test",
    "test:e2e:dev": "cross-env RUNNING_E2E=true start-server-and-test dev http-get://localhost:3000/ test:e2e",
    "test:e2e:run": "cross-env RUNNING_E2E=true start-server-and-test start http-get://localhost:3000/ test:e2e",
    "lint": "eslint .",
    "db:setup": "bun run scripts/db-setup.ts",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "rm -f dev.db && bun run db:setup",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-router/node": "^7.2.0",
    "@react-router/serve": "^7.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.0",
    "isbot": "^5.1.17",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.2.16",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.1.0"
  }
}
